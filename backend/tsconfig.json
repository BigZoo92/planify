{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "api/@types"],
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "skipLibCheck": true,
    "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "api/types/*"]
        }                           
  },
  "include": [
    "api/**/*.ts",
    "api/@types/types.d.ts"
  ]
}
